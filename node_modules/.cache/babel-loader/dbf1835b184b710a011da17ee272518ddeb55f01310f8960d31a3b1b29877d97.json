showLoginForm(e){\r\n            e.preventDefault();\r\n            this.createAcc = false;\r\n            this.login = true;\r\n            this.lostPw = false;\r\n\r\n        },\r\n        recoverPW(e){\r\n            e.preventDefault();\r\n            this.createAcc = false;\r\n            this.login = false;\r\n            this.lostPw = true;\r\n            console.log(\"sucessIsh\")\r\n        }\r\n\r\n    }    \r\n\r\n}\r\n</script>\r\n<style lang=\"scss\" scoped>\r\n\r\n@mixin toButtons{\r\n    border:#707070;\r\n    font-size: 1rem;\r\n    padding: 1vw;\r\n    border-radius: 28px;\r\n    margin: 1rem 1rem auto auto ;\r\n    cursor:pointer;\r\n    transition:0.4s;\r\n\r\n}\r\n.container{\r\n    display: grid;\r\n    grid-auto-flow: row;\r\n    justify-content: space-evenly;\r\n    grid-template-rows: 0.5fr; \r\n    grid-template-columns: 0.5fr; \r\n     \r\n    \r\n}\r\nform{\r\n    margin: 2rem;\r\n    display: grid;\r\n    grid-auto-flow: row;\r\n\r\n    label,input{\r\n        height: 6vh;\r\n        line-height: 8vh;\r\n    }\r\n\r\n\r\n   \r\n}\r\n.buttons{ \r\n        display: grid;\r\n        grid-auto-flow: column;\r\n        justify-content: space-evenly;\r\n\r\n        button{\r\n            @include toButtons;\r\n        }\r\n\r\n        #login{\r\n            color: darkgreen;\r\n            border: 1px solid darkgreen;\r\n        }\r\n        #forgotPw{\r\n            color: darkred;\r\n            border: 1px solid darkred;\r\n        }\r\n        #createAcc{\r\n            color: goldenrod;\r\n            border: 1px solid goldenrod;\r\n        }\r\n\r\n\r\n        #login:hover{\r\n            background-color: darkgreen;\r\n            color:#FFFFFF;\r\n        }\r\n\r\n        #forgotPw:hover{\r\n            background-color: darkred;\r\n            color:#FFFFFF;\r\n        }\r\n        #createAcc:hover{\r\n            background-color: goldenrod;\r\n            color:#FFFFFF;\r\n        }\r\n    }\r\n\r\n</style>"]},"metadata":{},"sourceTyp